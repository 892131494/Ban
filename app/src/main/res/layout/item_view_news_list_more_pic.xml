<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="153dp"
  app:cardCornerRadius="8dp"
  app:cardBackgroundColor="@color/md_white_1000"
  app:cardElevation="2dp"
  android:layout_marginLeft="16dp"
  android:layout_marginRight="16dp"
  android:layout_marginTop="3dp"
  android:layout_marginBottom="3dp"
  tools:background="@color/md_brown_100"
  >

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <TextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:ellipsize="end"
      android:lines="2"
      android:textColor="@color/md_black_1000"
      android:textSize="14sp"
      tools:text="杨幂的发际线再也回不去了吗？18.60杨幂的发际线再也回不去了吗？杨幂的发际线再也回不去了吗？"/>

    <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/pic_1"
      android:layout_width="102dp"
      android:layout_height="74.41dp"
      android:layout_below="@+id/title"
      android:layout_marginTop="6dp"
      app:actualImageScaleType="focusCrop"
      tools:background="@color/md_blue_200"
      />

    <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/pic_2"
      android:layout_width="102dp"
      android:layout_height="74.41dp"
      android:layout_above="@+id/time"
      android:layout_centerHorizontal="true"
      app:actualImageScaleType="focusCrop"
      tools:background="@color/md_blue_200"
      />

    <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/pic_3"
      android:layout_width="102dp"
      android:layout_height="74.41dp"
      app:actualImageScaleType="focusCrop"
      tools:background="@color/md_blue_200"
      android:layout_alignTop="@+id/pic_2"
      android:layout_alignParentEnd="true"/>


    <TextView
      android:id="@+id/author"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/pic_1"
      android:layout_marginTop="6dp"
      android:gravity="left|center_vertical"
      android:textColor="@color/md_grey_500"
      android:textSize="12sp"
      tools:text="腾讯娱乐"
      />

    <TextView
      android:id="@+id/time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/pic_1"
      android:layout_marginLeft="16sp"
      android:layout_marginTop="6dp"
      android:layout_toRightOf="@+id/author"
      android:gravity="left|center_vertical"
      android:textColor="@color/md_grey_500"
      android:textSize="12sp"
      tools:text="前天  11:30"
      />

  </RelativeLayout>


</android.support.v7.widget.CardView>