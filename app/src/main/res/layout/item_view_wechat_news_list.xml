<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="186.04dp"
  tools:cardBackgroundColor="@color/md_blue_200"
  >

  <com.facebook.drawee.view.SimpleDraweeView
    android:id="@+id/pic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:actualImageScaleType="focusCrop"
    />

  <com.coorchice.library.SuperTextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.4"
    app:solid="@color/md_black_1000"
    />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:orientation="vertical"
    >

    <TextView
      android:id="@+id/tv_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:textColor="@color/md_white_1000"
      android:textSize="@dimen/small_title"
      tools:text="【独家】2015年室内色彩搭配指南"
      />

    <com.coorchice.library.SuperTextView
      android:id="@+id/tv_source"
      android:layout_width="wrap_content"
      android:layout_height="29.77dp"
      android:layout_gravity="center"
      android:layout_marginTop="18.06dp"
      android:gravity="center"
      android:paddingLeft="8dp"
      android:paddingRight="8dp"
      android:textColor="@color/md_white_1000"
      android:textSize="@dimen/subhead"
      app:stroke_color="@color/md_white_1000"
      app:stroke_width="1dp"
      tools:text="尚品宅配"
      />
  </LinearLayout>

  <View
    android:layout_width="match_parent"
    android:layout_height="0.2dp"
    android:background="@color/split_line_0"
    android:layout_alignParentBottom="true"
    />


</RelativeLayout>